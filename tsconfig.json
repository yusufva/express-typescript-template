{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "Node",
    "baseUrl": "./",
    "paths": {
      "@api/*": ["api/*"],
      "@root/*": ["*"],
    },
    "outDir": "./dist",
    "rootDir": "./api",
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["api/**/*.ts"],
  "exclude": ["node_modules"]
}